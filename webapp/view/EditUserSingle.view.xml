<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="bam.controller.EditUserSingle">
	<App id="editUserSingle">
		<pages>
			<Page title="{i18n>title}" 
				showNavButton="true"
				navButtonPress="onNavBack">
				<content>
				<f:Form editable="true" id="formEditUserSingle">
				    <f:formContainers>
				        <f:FormContainer title="{i18n>editSingleUserRoles}" id="fConEditAttributes">
				            <f:formElements>
				                <f:FormElement label="{i18n>userId}" id="felmUserId">
				                    <f:fields>
				                        <Text id="lblUserId" text="{/USERID}" class="sapUiTinyMarginBegin"/>
				                    </f:fields>
				                </f:FormElement>
				                <f:FormElement label="{i18n>userName}" id="felmUserName">
				                    <f:fields>
				                        <Text id="lblUserName" text="{/USERNAME}" class="sapUiTinyMarginBegin"/>
				                    </f:fields>
				                </f:FormElement>
				                <f:FormElement label="{i18n>email}" id="felmEmail">
				                    <f:fields>
				                        <Text id="lblEmail" text="{/EMAIL}" class="sapUiTinyMarginBegin"/>
				                    </f:fields>
				                </f:FormElement>
				                <f:FormElement label="{i18n>roleLabel}" id="felmRole">
										<f:fields>
											<MultiComboBox id="ddlRole" width="500px" items="{path: '/ROLE_LIST'}">
												<core:Item key="{ID}" text="{LABEL}" />
											</MultiComboBox>
										</f:fields>
									</f:FormElement>
				            </f:formElements>
				        </f:FormContainer>
				    </f:formContainers>
				    <f:layout>
				        <f:ResponsiveGridLayout id="fResGridEditAttributes"/>
				    </f:layout>
				</f:Form>
				<Toolbar width="100%" id="tbrSubmit">
				     <content>
				        <ToolbarSpacer id="tbrSpSubmit"/>
						<Button text="{i18n>submit}" width="100px" id="btnSubmit" press="onSubmit"/>
				        <Button text="{i18n>cancel}" width="100px" id="btnCancel" press="onCancel" class="sapUiLargeMarginEnd"/>
				     </content>
					</Toolbar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>