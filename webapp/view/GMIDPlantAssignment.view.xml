<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="bam.controller.GMIDPlantAssignment">
	<App id="gmidPlantAssignment">
		<pages><Page title="{i18n>title}" class="sapUiResponsiveContentPadding" showNavButton="true" navButtonPress="onNavBack">
				<content>
				<ScrollContainer horizontal="true"> 
					<Table noDataText="No records to display" id="tblGMIDPlantAssignment" width="auto" items="{/GMIDPlantAssignmentVM}">
						<columns>
					        <Column id="clmHdrGMID" width="75px">
							    <header>
							        <Label text="{i18n>gmid}" id="lblHdrGMID"/>
							    </header>
						    </Column>
						    <Column id="clmHdrGMIDShortText" width="250px">
							    <header>
							        <Label text="{i18n>Annotation.GMID_SHORTTEXT}" id="lblHdrGMIDShortText"/>
							    </header>
						    </Column>
						    <Column id="clmHdrCountry" width="50px">
							    <header>
							        <Label text="{i18n>country}" id="lblHdrCountry"/>
							    </header>
						    </Column>
					        <Column id="clmHdrPlant" width="100px">
					            <header>
					                <Label text="{i18n>plant}" id="lblHdrPlant"/>
					            </header>
					        </Column>
					        <Column id="clmHdrPlantDesc"  width="250px">
					            <header>
					                <Label text="{i18n>plantdesc}" id="lblHdrPlantDesc"/>
					            </header>
					        </Column>
					        <Column id="clmHdrPlantStatus"  width="100px">
					            <header>
					                <Label text="{i18n>plantstatus}" id="lblHdrPlantStatus"/>
					            </header>
					        </Column>
					        <Column id="clmHdrPlantStatusDesc"  width="250px">
					            <header>
					                <Label text="{i18n>plantstatusdesc}" id="lblHdrPlantStatusDesc"/>
					            </header>
					        </Column>
					    </columns>
					    <items>
					        <ColumnListItem id="cliPlantSelection" highlight="{errorState}">
					            <cells>
					            	<Label id="lblGMID" text="{GMID}"/>
					            	<Label id="lblGMIDShortText" text="{GMID_DESC}"/>
					            	<Label id="lblCountry" text="{COUNTRY_CODE}"/>
					            	<List items="{path: 'PLANTS', templateShareable : true}">
					            		<CustomListItem>
											<CheckBox text="{PLANT_CODE}" selected="{IS_SELECTED}" editable="{IS_EDITABLE}"/>
										</CustomListItem>
									</List>
										<List items="{path: 'PLANTS', templateShareable : true}">
					            		<items>
											<StandardListItem title="{PLANT_DESC}"/>
										</items>
									</List>
									<List items="{path: 'PLANTS', templateShareable : true}">
					            		<items>
											<StandardListItem title="{PLANT_MATERIAL_STATUS}"/>
										</items>
									</List>
									<List items="{path: 'PLANTS', templateShareable : true}">
					            		<items>
											<StandardListItem title="{PLANT_MATERIAL_STATUS_DESC}"/>
										</items>
									</List>
					            </cells>
					        </ColumnListItem>
					    </items>
					</Table>
				</ScrollContainer>
					<Toolbar width="100%" id="tbrSubmit">
				     <content>
				         <ToolbarSpacer id="tbrSpSubmit"/>
							 <Button text="{i18n>submit}" width="100px" id="btnSubmit" visible="false" press="onSubmit"/>
				        	 <Button text="{i18n>cancel}" width="100px" id="btnCancel" press="onCancel" visible="false" class="sapUiLargeMarginEnd"/>
				          </content>
				 </Toolbar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>