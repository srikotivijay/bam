<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="bam.controller.EditPeopleRules">
	<App id="editPeopleRules">
		<pages>
			<Page title="{i18n>title}" 
				showNavButton="true"
				navButtonPress="onNavBack">
				<content>
					<Text id="lblPeopleRuleText" text="{i18n>curuleedit}" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom pageHeaderFont boldFont"/>	
					<Text id="lblPeopleRuleCount" text="{/RULE_COUNT}" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom pageHeaderFont boldFont"/>
					<f:Form editable="true" id="formEditPeopleRule" width="1400px">
						<f:formContainers>
							<f:FormContainer title="{i18n>editPeopleRules}" id="fConEditPeopleRules">
								<f:formElements>
									<f:FormElement label="{i18n>DEMAND_MANAGER}{i18n>mandatory}" id="felmDemandManager" visible="true">
										<ComboBox id="cmbDemandManager" name="cmbDemandManager" showSecondaryValues= "true" filterSecondaryValues= "true"
											selectedKey="{/DEMAND_MANAGER_ID}" value="{/DEMAND_MANAGER_NAME}" width="500px"
											items="{
												path: '/DEMAND_MANAGER',
												templateShareable : true}"
											change = "onChange">
											<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
										</ComboBox>
										<CheckBox id="chkDemandManager" name="chkDemandManager" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_DEMAND_MANAGER}" tooltip="{i18n>updateNullTooltip}" />
									</f:FormElement>
									<f:FormElement label="{i18n>GLOBAL_LEADER}{i18n>mandatory}" id="felmGlobalLeader" visible="true">
										<ComboBox id="cmbGlobalLeader" name="cmbGlobalLeader" showSecondaryValues= "true" filterSecondaryValues= "true"
											selectedKey="{/GLOBAL_LEADER_ID}" value="{/GLOBAL_LEADER_NAME}" width="500px"
											items="{
												path: '/GLOBAL_LEADER',
												templateShareable : true}"
											change = "onChange">
											<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
										</ComboBox>
										<CheckBox id="chkGlobalLeader" name="chkGlobalLeader" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_GLOBAL_LEADER}" tooltip="{i18n>updateNullTooltip}" />
									</f:FormElement>		
									<f:FormElement label="{i18n>MARKETING_DIRECTOR}{i18n>mandatory}" id="felmMarketingDirector" visible="true">
										<ComboBox id="cmbMarketingDirector" name="cmbMarketingDirector" showSecondaryValues= "true" filterSecondaryValues= "true"
											selectedKey="{/MARKETING_DIRECTOR_ID}" value="{/MARKETING_DIRECTOR_NAME}" width="500px"
											items="{
												path: '/MARKETING_DIRECTOR',
												templateShareable : true}"
											change = "onChange">
											<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
										</ComboBox>
										<CheckBox id="chkMarketingDirector" name="chkMarketingDirector" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_MARKETING_DIRECTOR}" tooltip="{i18n>updateNullTooltip}" />
									</f:FormElement>
									<f:FormElement label="{i18n>MARKETING_MANAGER}{i18n>mandatory}" id="felmMarketingManager" visible="true">
										<ComboBox id="cmbMarketingManager" name="cmbMarketingManager" showSecondaryValues= "true" filterSecondaryValues= "true"
											selectedKey="{/MARKETING_MANAGER_ID}" value="{/MARKETING_MANAGER_NAME}" width="500px"
											items="{
												path: '/MARKETING_MANAGER',
												templateShareable : true}"
											change = "onChange">
											<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
										</ComboBox>
										<CheckBox id="chkMarketingManager" name="chkMarketingManager" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_MARKETING_MANAGER}" tooltip="{i18n>updateNullTooltip}" />
									</f:FormElement>	
									<f:FormElement label="{i18n>MASTER_PLANNER}{i18n>mandatory}" id="felmMasterPlanner" visible="true">
										<ComboBox id="cmbMasterPlanner" name="cmbMasterPlanner" showSecondaryValues= "true" filterSecondaryValues= "true"
											selectedKey="{/MASTER_PLANNER_ID}" value="{/MASTER_PLANNER_NAME}" width="500px"
											items="{
												path: '/MASTER_PLANNER',
												templateShareable : true}"
											change = "onChange">
											<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
										</ComboBox>
										<CheckBox id="chkMasterPlanner" name="chkMasterPlanner" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_MASTER_PLANNER}" tooltip="{i18n>updateNullTooltip}" />
									</f:FormElement>
									<f:FormElement label="{i18n>PRODUCT_MANAGER}{i18n>mandatory}" id="felmProductManager" visible="true">
										<ComboBox id="cmbProductManager" name="cmbProductManager" showSecondaryValues= "true" filterSecondaryValues= "true"
											selectedKey="{/PRODUCT_MANAGER_ID}" value="{/PRODUCT_MANAGER_NAME}" width="500px"
											items="{
												path: '/PRODUCT_MANAGER',
												templateShareable : true}"
											change = "onChange">
											<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
										</ComboBox>
										<CheckBox id="chkProductManager" name="chkProductManager" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_PRODUCT_MANAGER}" tooltip="{i18n>updateNullTooltip}" />
									</f:FormElement>
									<f:FormElement label="{i18n>REG_SUPPLY_CHAIN_MANAGER}{i18n>mandatory}" id="felmRegionalSupplyChainManager" visible="true">
										<ComboBox id="cmbRegionalSupplyChainManager" name="cmbRegionalSupplyChainManager" showSecondaryValues= "true" filterSecondaryValues= "true"
											selectedKey="{/REGIONAL_SUPPLY_CHAIN_MANAGER_ID}" value="{/REGIONAL_SUPPLY_CHAIN_MANAGER_NAME}" width="500px"
											items="{
												path: '/REGIONAL_SUPPLY_CHAIN_MANAGER',
												templateShareable : true}"
											change = "onChange">
											<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
										</ComboBox>
										<CheckBox id="chkRegionalSupplyChainManager" name="chkRegionalSupplyChainManager" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_REGIONAL_SUPPLY_CHAIN_MANAGER}" tooltip="{i18n>updateNullTooltip}" />
									</f:FormElement>
									<f:FormElement label="{i18n>SUPPLY_CHAIN_MANAGER}{i18n>mandatory}" id="felmSupplyChainManager" visible="true">
										<ComboBox id="cmbSupplyChainManager" name="cmbSupplyChainManager" showSecondaryValues= "true" filterSecondaryValues= "true"
											selectedKey="{/SUPPLY_CHAIN_MANAGER_ID}" value="{/SUPPLY_CHAIN_MANAGER_NAME}" width="500px"
											items="{
												path: '/SUPPLY_CHAIN_MANAGER',
												templateShareable : true}"
											change = "onChange">
											<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
										</ComboBox>
										<CheckBox id="chkSupplyChainManager" name="chkSupplyChainManager" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_SUPPLY_CHAIN_MANAGER}" tooltip="{i18n>updateNullTooltip}" />
									</f:FormElement>	
									<f:FormElement label="{i18n>SUPPLY_CHAIN_PLANNING_SPECIALIST}{i18n>mandatory}" id="felmSupplyChainPlanningSpecialist" visible="true">
										<ComboBox id="cmbSupplyChainPlanningSpecialist" name="cmbSupplyChainManager" showSecondaryValues= "true" filterSecondaryValues= "true"
											selectedKey="{/SUPPLY_CHAIN_PLANNING_SPECIALIST_ID}" value="{/SUPPLY_CHAIN_PLANNING_SPECIALIST_NAME}" width="500px"
											items="{
												path: '/SUPPLY_CHAIN_PLANNING_SPECIALIST',
												templateShareable : true}"
											change = "onChange">
											<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
										</ComboBox>
										<CheckBox id="chkSupplyChainPlanningSpecialist" name="chkSupplyChainPlanningSpecialist" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_SUPPLY_CHAIN_PLANNING_SPECIALIST}" tooltip="{i18n>updateNullTooltip}" />
									</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
				    <f:layout>
				        <f:ResponsiveGridLayout id="fResGridEditAttributes"/>
				    </f:layout>						
					</f:Form>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>