<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="bam.controller.EditPeopleRules">
	<App id="editPeopleRules">
		<pages>
			<Page title="{i18n>title}" 
				showNavButton="true"
				navButtonPress="onNavBack">
				<content>
					<Text id="lblPeopleRuleText" text="{i18n>curuleedit}" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom pageHeaderFont boldFont"/>	
					<Text id="lblPeopleRuleCount" text="{/RULE_COUNT}" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom pageHeaderFont boldFont"/>
					<f:Form editable="true" id="formEditPeopleRule">
						<f:layout>
							<f:ResponsiveGridLayout
								labelSpanL="3"
								adjustLabelSpan="false"
								columnsXL="12"
								columnsL="12"
								columnsM="12"
								singleContainerFullSize="true" />
						</f:layout>
						<f:formContainers>
							<f:FormContainer title="{i18n>editPeopleRules}" id="fConEditPeopleRules" >
								<f:formElements>
									<f:FormElement label="{i18n>HDR_GLOBAL_LEADER}{i18n>mandatory}" id="felmDemandManager" visible="{/showDemandManager}">
										<FlexBox renderType="Bare">
											<ComboBox id="cmbDemandManager" name="cmbDemandManager" showSecondaryValues= "true" filterSecondaryValues= "true"
												selectedKey="{/DEMAND_MANAGER_ID}" value="{/DEMAND_MANAGER_NAME}" width="500px"
												items="{
													path: '/DEMAND_MANAGER',
													templateShareable : true}"
												change = "onChange"
												>
												<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
											</ComboBox>
											<Button id="btnSearchDemandManger" icon="sap-icon://search" press="onSearch" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
											<CheckBox id="chkDemandManager" name="chkDemandManager" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_DEMAND_MANAGER}" tooltip="{i18n>updateNullTooltip}"   class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
										</FlexBox>
									</f:FormElement>
									<f:FormElement label="{i18n>HDR_GLOBAL_LEADER}{i18n>mandatory}" id="felmGlobalLeader" visible="{/showGlobalLeader}">
										<FlexBox renderType="Bare">
											<ComboBox id="cmbGlobalLeader" name="cmbGlobalLeader" showSecondaryValues= "true" filterSecondaryValues= "true"
												selectedKey="{/GLOBAL_LEADER_ID}" value="{/GLOBAL_LEADER_NAME}" width="500px"
												items="{
													path: '/GLOBAL_LEADER',
													templateShareable : true}"
												change = "onChange">
												<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
											</ComboBox>
											<Button id="btnSearchGlobalLeader" icon="sap-icon://search" press="onSearch" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
											<CheckBox id="chkGlobalLeader" name="chkGlobalLeader" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_GLOBAL_LEADER}" tooltip="{i18n>updateNullTooltip}" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
										</FlexBox>
									</f:FormElement>		
									<f:FormElement label="{i18n>HDR_MARKETING_DIRECTOR}{i18n>mandatory}" id="felmMarketingDirector" visible="{/showMarketingDirector}">
										<FlexBox renderType="Bare">
											<ComboBox id="cmbMarketingDirector" name="cmbMarketingDirector" showSecondaryValues= "true" filterSecondaryValues= "true"
												selectedKey="{/MARKETING_DIRECTOR_ID}" value="{/MARKETING_DIRECTOR_NAME}" width="500px"
												items="{
													path: '/MARKETING_DIRECTOR',
													templateShareable : true}"
												change = "onChange">
												<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
											</ComboBox>
											<Button id="btnSearchMarketingDirector" icon="sap-icon://search" press="onSearch" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
											<CheckBox id="chkMarketingDirector" name="chkMarketingDirector" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_MARKETING_DIRECTOR}" tooltip="{i18n>updateNullTooltip}" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
										</FlexBox>
									</f:FormElement>
									<f:FormElement label="{i18n>HDR_MARKETING_MANAGER}{i18n>mandatory}" id="felmMarketingManager" visible="{/showMarketingManger}">
										<FlexBox renderType="Bare">
											<ComboBox id="cmbMarketingManager" name="cmbMarketingManager" showSecondaryValues= "true" filterSecondaryValues= "true"
												selectedKey="{/MARKETING_MANAGER_ID}" value="{/MARKETING_MANAGER_NAME}" width="500px"
												items="{
													path: '/MARKETING_MANAGER',
													templateShareable : true}"
												change = "onChange">
												<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
											</ComboBox>
											<Button id="btnSearchMarketingManager" icon="sap-icon://search" press="onSearch" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
											<CheckBox id="chkMarketingManager" name="chkMarketingManager" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_MARKETING_MANAGER}" tooltip="{i18n>updateNullTooltip}" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
										</FlexBox>
									</f:FormElement>	
									<f:FormElement label="{i18n>MASTER_PLANNER}{i18n>mandatory}" id="felmMasterPlanner" visible="{/showMasterPlanner}">
										<FlexBox renderType="Bare">
											<ComboBox id="cmbMasterPlanner" name="cmbMasterPlanner" showSecondaryValues= "true" filterSecondaryValues= "true"
												selectedKey="{/MASTER_PLANNER_ID}" value="{/MASTER_PLANNER_NAME}" width="500px"
												items="{
													path: '/MASTER_PLANNER',
													templateShareable : true}"
												change = "onChange">
												<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
											</ComboBox>
											<Button id="btnSearchMasterPlanner" icon="sap-icon://search" press="onSearch" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
											<CheckBox id="chkMasterPlanner" name="chkMasterPlanner" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_MASTER_PLANNER}" tooltip="{i18n>updateNullTooltip}" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
										</FlexBox>
									</f:FormElement>
									<f:FormElement label="{i18n>PRODUCT_MANAGER}{i18n>mandatory}" id="felmProductManager" visible="{/showProductManager}">
										<FlexBox renderType="Bare">
											<ComboBox id="cmbProductManager" name="cmbProductManager" showSecondaryValues= "true" filterSecondaryValues= "true"
												selectedKey="{/PRODUCT_MANAGER_ID}" value="{/PRODUCT_MANAGER_NAME}" width="500px"
												items="{
													path: '/PRODUCT_MANAGER',
													templateShareable : true}"
												change = "onChange">
												<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
											</ComboBox>
											<Button id="btnSearchProductManager" icon="sap-icon://search" press="onSearch" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
											<CheckBox id="chkProductManager" name="chkProductManager" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_PRODUCT_MANAGER}" tooltip="{i18n>updateNullTooltip}" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
										</FlexBox>
									</f:FormElement>
									<f:FormElement label="{i18n>REG_SUPPLY_CHAIN_MANAGER}{i18n>mandatory}" id="felmRegionalSupplyChainManager" visible="{/showRegionalSupplychainManager}">
										<FlexBox renderType="Bare">
											<ComboBox id="cmbRegionalSupplyChainManager" name="cmbRegionalSupplyChainManager" showSecondaryValues= "true" filterSecondaryValues= "true"
												selectedKey="{/REGIONAL_SUPPLY_CHAIN_MANAGER_ID}" value="{/REGIONAL_SUPPLY_CHAIN_MANAGER_NAME}" width="500px"
												items="{
													path: '/REGIONAL_SUPPLY_CHAIN_MANAGER',
													templateShareable : true}"
												change = "onChange">
												<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
											</ComboBox>
											<Button id="btnSearchRegSupplyChainManager" icon="sap-icon://search" press="onSearch" class="sapUiTinyMarginBegin sapUiTinyMarginEnd" />
											<CheckBox id="chkRegionalSupplyChainManager" name="chkRegionalSupplyChainManager" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_REGIONAL_SUPPLY_CHAIN_MANAGER}" tooltip="{i18n>updateNullTooltip}" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
										</FlexBox>
									</f:FormElement>
									<f:FormElement label="{i18n>HDR_SUPPLY_CHAIN_MANAGER}{i18n>mandatory}" id="felmSupplyChainManager" visible="{/showSupplyChainManager}">
										<FlexBox renderType="Bare">
											<ComboBox id="cmbSupplyChainManager" name="cmbSupplyChainManager" showSecondaryValues= "true" filterSecondaryValues= "true"
												selectedKey="{/SUPPLY_CHAIN_MANAGER_ID}" value="{/SUPPLY_CHAIN_MANAGER_NAME}" width="500px"
												items="{
													path: '/SUPPLY_CHAIN_MANAGER',
													templateShareable : true}"
												change = "onChange">
												<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
											</ComboBox>
											<Button id="btnSupplyChainManager" icon="sap-icon://search" press="onSearch" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
											<CheckBox id="chkSupplyChainManager" name="chkSupplyChainManager" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_SUPPLY_CHAIN_MANAGER}" tooltip="{i18n>updateNullTooltip}" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
										</FlexBox>
									</f:FormElement>	
									<f:FormElement label="{i18n>HDR_SUPPLY_CHAIN_PLANNING_SPECIALIST}{i18n>mandatory}" id="felmSupplyChainPlanningSpecialist" visible="{/showSupplyChainPlanningSpecialist}">
										<FlexBox renderType="Bare">
											<ComboBox id="cmbSupplyChainPlanningSpecialist" name="cmbSupplyChainPlanningSpecialist" showSecondaryValues= "true" filterSecondaryValues= "true"
												selectedKey="{/SUPPLY_CHAIN_PLANNING_SPECIALIST_ID}" value="{/SUPPLY_CHAIN_PLANNING_SPECIALIST_NAME}" width="500px"
												items="{
													path: '/SUPPLY_CHAIN_PLANNING_SPECIALIST',
													templateShareable : true}"
												change = "onChange">
												<core:ListItem key="{USER_ID}" text="{USER_NAME}" additionalText="{USER_ID}"/>
											</ComboBox>
											<Button id="btnSupplyChainPlanningSpecialist" icon="sap-icon://search" press="onSearch" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
											<CheckBox id="chkSupplyChainPlanningSpecialist" name="chkSupplyChainPlanningSpecialist" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_SUPPLY_CHAIN_PLANNING_SPECIALIST}" tooltip="{i18n>updateNullTooltip}" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
										</FlexBox>
									</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>					
					</f:Form>
					<Toolbar width="100%" id="tbrSubmit">
				    	<content>
				        	<ToolbarSpacer id="tbrSpSubmit"/>
							<Button text="{i18n>submit}" width="100px" id="btnSubmit" press="onSubmit"/>
				        	<Button text="{i18n>cancel}" width="100px" id="btnCancel" press="onCancel" class="sapUiLargeMarginEnd"/>
				    	</content>
					</Toolbar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>