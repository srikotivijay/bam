<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="bam.controller.EditCURules">
	<App id="editCURules">
		<pages>
			<Page title="{i18n>title}" 
				showNavButton="true"
				navButtonPress="onNavBack">
				<content>
				<Text id="lblGMID" text="{i18n>curuleedit}" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom pageHeaderFont boldFont"/>	
				<Text id="lblGMIDCountryCount" text="{/RULE_COUNT}" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom pageHeaderFont boldFont"/>
				<f:Form editable="true" id="formEditAttributeSingle">
				    <f:formContainers>
				        <f:FormContainer title="{i18n>editCURules}" id="fConEditCURules">
				            <f:formElements>
				                <f:FormElement label="{i18n>cu}" id="felmCU">
				                	<ComboBox
										id="cmbCU"
										name="cmbCU"
										showSecondaryValues= "true"
										filterSecondaryValues= "true"
										selectedKey="{/RCU_CODE}"
										value="{/RCU_DESC}"
										width="500px"
										items="{
											path: '/RCU',
											templateShareable : true
										}"
										change = "onChange">
										<core:ListItem key="{RCU_CODE}" text="{RCU_DESC}" additionalText="{RCU_CODE}"/>
									</ComboBox>
								   <CheckBox id="chkCU1" name="chkCU1" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_RCU}" tooltip="{i18n>updateNullTooltip}" />
				                </f:FormElement>
				                <f:FormElement label="{i18n>subCU}" id="felmSubCU">
				                    <ComboBox
										id="cmbSubCU"
										name="cmbSubCU"
										showSecondaryValues= "true"
										filterSecondaryValues= "true"
										selectedKey="{/SUBRCU_CODE}"
										value="{/SUBRCU_DESC}"
										width="500px"
										items="{
											path: '/SubRCU',
											templateShareable : true
										}"
										change = "onChange">
									<core:ListItem key="{SUB_RCU_CODE}" text="{SUB_RCU_DESC}" additionalText="{SUB_RCU_CODE}"/>
								</ComboBox>
									<CheckBox id="chkSubCU1" name="chkSubCU1" text="{i18n>updateNull}" select="onChecked" selected="{/NULLIFY_SUBRCU}" tooltip="{i18n>updateNullTooltip}" />
				                </f:FormElement>
				            </f:formElements>
				        </f:FormContainer>
				    </f:formContainers>
				    <f:layout>
				        <f:ResponsiveGridLayout id="fResGridEditAttributes"/>
				    </f:layout>
				</f:Form>
				<Toolbar width="100%" id="tbrSubmit">
				     <content>
				        <ToolbarSpacer id="tbrSpSubmit"/>
						<Button text="{i18n>submit}" width="100px" id="btnSubmit" press="onSubmit"/>
				        <Button text="{i18n>cancel}" width="100px" id="btnCancel" press="onCancel" class="sapUiLargeMarginEnd"/>
				     </content>
					</Toolbar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>